doctype html

head
    meta(charset="utf-8")
    link(href="css/style.css" rel="stylesheet")
    script(src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous")
body
    include includes/loader
    .auth-header.mt-1
        .row
            include includes/logo
    .auth-body.d-flex-flex-column.align-itams-center
        input(type="hidden" name="authenticity_token")
        .auth
            .login.auth-mode
                .login-header.m-auto
                    h1 Sign in to Cube IT
                .login-body.bg-dark.m-auto
                    form#loginForm.d-flex.flex-column.justify-content-center.p-3(autocomplete="on")
                        .mb-3
                            label.form-label.control-label(for="loginEmail") Email address
                            input.form-control.validate#loginEmail(type="email" max-length="45" required)
                        .mb-3
                            .d-flex.justify-content-between
                                label.form-label.control-label(for="loginPassword") Password
                                a.forgot-password Forgot password?
                            input.form-control.validate#loginPassword(type="password" max-length="45" required)
                        button.btn.btn-success(type="submit" data="signIn") Sign in
                        .my-3.text-center
                            span.my-2 Or
                        .mb-3
                            .alt-auth.d-flex.justify-content-center
                                include svg/github
                                include svg/google
                                include svg/linkedin
                .login-footer.m-auto.p-3
                    label.mx-2 New to Cube IT?
                        a.mx-2.switch-auth-mode Create an account.

            .registration.auth-mode.d-none
                .registration-header.m-auto
                    h1 Sign up to Cube IT
                .registration-body.bg-dark.m-auto
                    form#registrationForm.d-flex.flex-column.justify-content-center.p-3(autocomplete="on")
                        .mb-3
                            label.form-label.control-label(for="registrationFirstName") First name
                            input.form-control.validate#registrationFirstName(name ="fname" required)
                        .mb-3
                            label.form-label.control-label(for="registrationLastName") Last name
                            input.form-control.validate#registrationLastName(name ="lname" max-length="45" required)
                        .mb-3
                            label.form-label.control-label(for="registrationEmail") Email address
                            input.form-control.validate#registrationEmail(type="email" max-length="45" name="email" required)
                        .mb-3
                            label.form-label.control-label(for="registrationPassword") Password
                            input.form-control.validate#registrationPassword(type="password" max-length="45" name="new-password" required)
                        .mb-3
                            label.form-label.control-label(for="registrationConfirmPassword") Confirm password
                            input.form-control.validate#registrationConfirmPassword(type="password" max-length="45" name="new-password" required)
                        button.btn.btn-success(type="submit" data="signUp") Sign up
                        .my-3.text-center
                            span.my-2 Or
                        .mb-3
                            .alt-auth.d-flex.justify-content-center
                                include svg/github
                                include svg/google
                                include svg/linkedin
                .registration-footer.m-auto.p-3
                    label.mx-2 Have an account?
                        a.mx-2.switch-auth-mode Sign in to Cube IT.
    script(src="js/script.js")
    script(src="js/authorization.js")